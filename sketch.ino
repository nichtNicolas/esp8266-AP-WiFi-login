bool testWifi(void) {
    int c = 0;
    Serial.println("Waiting for Wifi to connect to ESP8266");
    while ( c < 20 ) {
        if (WiFi.status() == WL_CONNECTED) {
            return true;
        }
        delay(500);
        Serial.print(WiFi.status());
        c++;
    }
    Serial.println("");
    Serial.println("Connect timed out, opening AP");
    return false;
}

